<Window x:Class="Bonap.PrintBridge.Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bonap Print Bridge Manager" Height="720" Width="960">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12" VerticalAlignment="Top" HorizontalAlignment="Stretch" >
            <GroupBox Header="Settings" Margin="0,0,0,12">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,6,6" VerticalAlignment="Center">Bridge URL</TextBlock>
                    <TextBox x:Name="BridgeUrlTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,6,6" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,6,6" VerticalAlignment="Center">Token</TextBlock>
                    <PasswordBox x:Name="TokenBox" Grid.Row="1" Grid.Column="1" Margin="0,0,6,6" />
                    <CheckBox x:Name="IgnoreCertErrorsCheckBox" Grid.Row="2" Grid.Column="1" Margin="0,0,6,6" Content="Ignore certificate errors for localhost" />
                    <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Padding="16,8" Margin="6,0,0,0" Click="SaveSettings_Click">Save</Button>
                </Grid>
            </GroupBox>

            <GroupBox Header="Status" Margin="0,0,0,12">
                <DockPanel Margin="8">
                    <Ellipse x:Name="StatusIndicator" Width="16" Height="16" Fill="Red" Stroke="Gray" StrokeThickness="1" VerticalAlignment="Center" />
                    <TextBlock x:Name="StatusText" Margin="8,0,0,0" VerticalAlignment="Center" />
                </DockPanel>
            </GroupBox>

            <GroupBox Header="Printers" Margin="0,0,0,12">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PrintersComboBox" Grid.Column="0" DisplayMemberPath="Name" SelectedValuePath="Name" Margin="0,0,6,0" />
                    <Button Grid.Column="1" Padding="16,8" Click="RefreshPrinters_Click">Refresh printers</Button>
                </Grid>
            </GroupBox>

            <GroupBox Header="Actions" Margin="0,0,0,12">
                <StackPanel Margin="8">
                    <TextBlock Margin="0,0,0,6">Test ticket content</TextBlock>
                    <TextBox x:Name="TestTicketTextBox" AcceptsReturn="True" Height="120" TextWrapping="Wrap" Margin="0,0,0,8" />
                    <WrapPanel>
                        <Button Padding="16,8" Margin="0,0,8,0" Click="PrintTestTicket_Click">Print test ticket</Button>
                        <Button Padding="16,8" Click="OpenDrawer_Click">Open drawer (PIN0)</Button>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Logs">
                <DockPanel Margin="8">
                    <Button DockPanel.Dock="Top" Padding="16,8" Margin="0,0,0,8" Click="RefreshLogs_Click">Refresh logs</Button>
                    <TextBox x:Name="LogsTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="NoWrap" Height="260" IsReadOnly="True" />
                </DockPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>
